<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainListSales"
    android:weightSum="100"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        >



        <TextView
            android:text="Tgl awal:"
            android:id="@+id/tv_dateresult"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/bt_datepicker"
            android:text="..."
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            />

        <TextView
            android:text="Tgl akhir:"
            android:id="@+id/tv_dateresult2"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/bt_datepicker2"
            android:text="..."
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            />





    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"

    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="80"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RV_ListFotoSales"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <Button
        android:id="@+id/Btn_SeeAllInMap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="Lihat Semua Di Peta"
        />

</LinearLayout>