<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".ListViewVisitUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/TxtSalesIDVisit"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="ID Sales :"
            android:textSize="20dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/TxtSalesNameVisit"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Nama Sales :"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/BtnReView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text="Tampilkan Ulang"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/TxtTglAwalSalesVisit"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Tgl awal:"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/bt_datepicker"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:text="..."
            />

        <TextView
            android:id="@+id/TxtTglAkhirSalesVisit"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Tgl akhir:"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/bt_datepicker2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:text="..."
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="80">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RV_ListVisitSales"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
    <Button
        android:id="@+id/Btn_SeeAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Lihat Semua"

        />


</LinearLayout>