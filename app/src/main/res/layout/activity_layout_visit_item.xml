<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingVertical="5dp">

    <ImageView
        android:id="@+id/ivFotoKunjungan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            >

            <TextView
                android:id="@+id/tvJudulBerita"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="Perihal kunjungan"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ButtonDeleteItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:src="@drawable/ic_highlight_off_black_24dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/tvTglTerbit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sabtu, 12 Maret 2018."
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/Txt_NamaSales"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="left"
                android:text="Erakomp - biggestwork"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/TxtVisitNoGPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/TxtVisitID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/TxtVisitPhotoURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>