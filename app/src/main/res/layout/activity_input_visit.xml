<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".InputVisit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titledataregistrasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Silahkan Foto Tempat Kunjungan Anda"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontTitle"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/TxtVisitNo"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:text="No Visit"
            android:visibility="gone"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignBottom="@id/titledataregistrasi"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        >




                <ImageView
                    android:id="@+id/IVProfile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:tooltipText="Ambil foto kunjungan"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:visibility="visible"

                    />




            <Button
                android:id="@+id/BtnUploadPhotoProfile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="KAMERA - AMBIL FOTO LOKASI"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:textSize="15sp"
                />




    </LinearLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TxtAlamatUserInputL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/TxtReview"
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:inputType="textMultiLine"
            android:hint="Tujuan Kunjungan"
            android:layout_alignParentLeft="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:gravity="top"
            android:padding="5dip"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <Button
            android:id="@+id/ButtonSaveVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="KIRIM FOTO KUNJUNGAN"
            android:background="@color/colorPrimaryDark"
            />



    </RelativeLayout>
    <!--<Button
        android:id="@+id/buttonUploadPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload"/>-->



</LinearLayout>